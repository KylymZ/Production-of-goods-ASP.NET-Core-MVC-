@model Enterprises_manufacturing_goods.Saleofproducts

@{
    ViewData["Title"] = "Добавление";
}

<h1>Создание новой записи</h1>

<h4>Продажа продукции</h4>
<style>
    .Error {
        color: red;
        font-size: 30px;
    }
</style>
<div>
    <p class="Error">@ViewBag.Message</p>
</div>
<hr />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <select asp-for="Product" class="form-control" asp-items="ViewBag.Product"></select>
            </div>
            <div class="form-group">
                <label asp-for="CountSaleofpr" class="control-label"></label>
                <input asp-for="CountSaleofpr" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                <select asp-for="Employee" class="form-control" asp-items="ViewBag.Employee"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>
